<h1>Listing tours</h1>

<table>
  <tr>
    <th> title</th>
    <th>String</th>
    <th>Desc ita</th>
    <th>Desc fra</th>
    <th>Text</th>
    <th>Desc eng</th>
    <th>Desc ger</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tours.each do |tour| %>
  <tr>
    <td><%= tour. title %></td>
    <td><%= tour.string %></td>
    <td><%= tour.desc_ita %></td>
    <td><%= tour.desc_fra %></td>
    <td><%= tour.text %></td>
    <td><%= tour.desc_eng %></td>
    <td><%= tour.desc_ger %></td>
    <td><%= link_to 'Show', tour %></td>
    <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
    <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

